<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginStart="@dimen/item_menu_rss_margin_end_start"
    android:layout_marginEnd="@dimen/item_menu_rss_margin_end_start"
    android:layout_marginBottom="@dimen/item_menu_rss_margin_bottom_top"
    android:layout_marginTop="@dimen/item_menu_rss_margin_bottom_top">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu title"
        android:layout_weight="1"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/item_menu_rss_icon_size"
        android:layout_height="@dimen/item_menu_rss_icon_size"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"/>
</LinearLayout>